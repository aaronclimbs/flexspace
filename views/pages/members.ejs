                          <th scope="col">Room Review</th>
                         
                          
                        </tr>
                      </thead>
                      <tbody id="reviews-list">
            
                       </tbody>
                       </table>
                      
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary modal-btn" data-dismiss="modal">Close</button>
                    
                  </div>
                </div>
              </div>
