<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  
  <body>
  <% include ../partials/nav.ejs %>
  <div class="container member mx-auto">
    <div class="row text-center">
      <div class="col-md-12">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="card ">
      <div class="card-header text-center">
        My Reservations
      </div>
      <div class="card-body text-center" >
        <h5 class="card-title d-none">No reservations found</h5>

        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Room Name</th>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
              <th scope="col">Duration</th>
              <th scope="col">Cost</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody id="my-reservations">

           </tbody>
           </table>
      </div>
      <div class="card-header text-center">
       Rooms I Manage
      </div>
      <div class="card-body text-center" >
        <h5 class="card-title d-none">No reservations found</h5>

        <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">Room Image</th>
                <th scope="col">Room Name</th>
                <th scope="col">Room Location</th>
                <th scope="col">Active Reservations</th>
               
              </tr>
            </thead>
            <tbody id="my-rooms">
  
             </tbody>
             </table>
      </div>
      
      <div class="card-footer text-center">
        Need a room? Search <a class="search-link" href="/viewrooms">Here</a>
        <br />
        Have a room to list? Click
        <a class="search-link" href="/addroom">Here</a>
      </div>
    </div>
  </div>




          <!-- Modal used to display Room Info-->
          <div class="modal fade" id="show-room-modal" tabindex="-1" role="dialog" aria-labelledby="show-room-modal" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title"id="modal-room-name">Room Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body justify-content-center" id="room-name">
                      
                      
                          

                         
                        
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-primary float-left">Text me this!</button>
                    <button type="button" class="btn btn-secondary modal-btn" data-dismiss="modal">Close</button>
                    
                  </div>
                </div>
              </div>
            </div>

  <% include ../partials/footer.ejs %>
  </body>
</html>



