<html>
  <head>
    <% include ../partials/head.ejs %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/spin.js/2.3.2/spin.js"></script>
  </head>
  <% include ../partials/nav.ejs %>


  <div class="container login-form">
    <div id="loading">
      <div id="loadingcontent">
        <p id="loadingspinner">
          Logging in...sending 0s and 1s
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="container">
          <div class="card ">
            <div class="card-header text-center">
              Login
            </div>
            <div class="card-body">
              <form class="login">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email-login"
                    placeholder="Email"
                  />
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password-login"
                    placeholder="Password"
                  />
                </div>
                <button
                  type="submit "
                  class="btn btn-dark float-left login-btn"
                >
                  Login
                </button>
                <span class="float-right" id="error-info"></span>
              </form>
            </div>
            <div class="card-footer">
              <p class="text-center ">
                Not a member? Sign up
                <a class="signup-link" href="/signup">here</a>
              </p>
            </div>
          </div>
          <br />
        </div>
      </div>
    </div>
  </div>

 

  <% include ../partials/footer.ejs %>

</html>
